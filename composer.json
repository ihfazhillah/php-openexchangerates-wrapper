{
  "name": "ihfazhillah/php-openexchangerates-wrapper",
  "description": "a php wrapper of open exchange rates api",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "ihfazhillah",
      "email": "mihfazhillah@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "guzzlehttp/guzzle": "^6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7",
    "mikey179/vfsStream": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "OpenExchangeRatesWrapper\\": ["src/"],
      "OpenExchangeRatesWrapper\\Endpoints\\": ["src/endpoints/"],
      "OpenExchangeRatesWrapper\\Exceptions\\": ["src/exceptions/"],
      "OpenExchangeRatesWrapper\\Helpers\\": ["src/helpers/"],
      "OpenExchangeRatesWrapper\\Caches\\" : ["src/caches/"]
    }
  },
  "scripts": {
    "phpunit": ["phpunit --bootstrap vendor/autoload.php"]
  }
}
